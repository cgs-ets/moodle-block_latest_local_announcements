{{!
    @template block_latest_local_announcements/list

    Course Announcements block list template.
}}

<div class="block_latest_local_announcements-content{{#ishome}} home{{/ishome}}" data-region="block_latest_local_announcements-instance-{{instanceid}}">
    <div class="lann-header">
        <h3>{{#str}} title, block_latest_local_announcements {{/str}}</h3>
        {{#canaudit}}
            {{#auditingon}}
                <a class="auditing-icon auditing-is-on pulse" href="#">
                    {{#str}}auditingonicon, block_latest_local_announcements{{/str}}
                    <span class="tip">{{#str}}auditingontitle, block_latest_local_announcements{{/str}}</span>
                    <span class="loader"><span class="circle spin"></span></span>
                </a>
            {{/auditingon}}
            {{^auditingon}}
                <a class="auditing-icon auditing-is-off" href="#">
                    {{#str}}auditingofficon, block_latest_local_announcements{{/str}}
                    <span class="tip">{{#str}}auditingofftitle, block_latest_local_announcements{{/str}}</span>
                    <span class="loader"><span class="circle spin"></span></span>
                </a>
            {{/auditingon}}
        {{/canaudit}}
        {{#canpost}}
        <a id="btn-newannouncement" class="btn btn-secondary" href="{{addnewurl}}">{{# str }} addanewannouncement, block_latest_local_announcements {{/ str }}</a>
        {{/canpost}}
    </div>
    <div class="lann-list">
    {{#list}}
        {{#announcements}}
            {{>block_latest_local_announcements/announcement}}
        {{/announcements}}
        {{^announcements.0}}{{#str}} list:noannouncements, local_announcements {{/str}}{{/announcements.0}}
    {{/list}}
    </div>
    <div class="lann-footer">
        <a id="btn-viewall" class="btn btn-secondary" href="{{viewmoreurl}}">{{viewmoretitle}}</a>
    </div>
</div>